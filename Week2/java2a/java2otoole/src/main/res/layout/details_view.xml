<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/detailPI"
        android:contentDescription="@string/contPI"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/ega"
        android:contentDescription="@string/egaIM"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:alpha=".50"
        android:src="@drawable/egaimage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="25sp"
        android:id="@+id/detailUN"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/detailPI"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="18sp"
        android:id="@+id/detailFN"
        android:layout_toRightOf="@+id/detailPI"
        android:layout_alignParentRight="true"
        android:gravity="center|left"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/detailUN" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:id="@+id/detailSI"
        android:contentDescription="@string/contTI"
        android:layout_below="@+id/detailPI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_below="@+id/detailSI"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailbtn"
        android:id="@+id/button"
        android:textColor="#FFFF00"
        android:layout_below="@+id/ratingbar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>